<UserControl x:Class="Blackfrost.Views.SpellsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab SelectedSource="/Content/x.xaml" Layout="List">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="clarity"/>
                <mui:Link DisplayName="garrison"/>
                <mui:Link DisplayName="ghost"/>
                <mui:Link DisplayName="heal"/>
                <mui:Link DisplayName="revive"/>
                <mui:Link DisplayName="cleanse"/>
                <mui:Link DisplayName="teleport"/>
                <mui:Link DisplayName="smite"/>
                <mui:Link DisplayName="barrier"/>
                <mui:Link DisplayName="exhaust"/>
                <mui:Link DisplayName="ignite"/>
                <mui:Link DisplayName="clairvoyance"/>
                <mui:Link DisplayName="flash"/>
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>