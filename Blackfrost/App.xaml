<Application 
    x:Class="Blackfrost.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!--COLORS-->
        <Color x:Key="AccentColor">#2ADFE1</Color>
        <Color x:Key="BackgroundColor">#222222</Color>
        <Color x:Key="ForegroundColor">#EEEEEE</Color>
        <Color x:Key="SubtleColor">#888888</Color>

        <!--BRUSHES-->
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
        <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
        <SolidColorBrush x:Key="SubtleBrush" Color="{StaticResource SubtleColor}" />

        <!--BASE STYLES-->
        <Style x:Key="BaseTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
        </Style>

        <Style x:Key="FieldLabelTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        </Style>
    </Application.Resources>
</Application>